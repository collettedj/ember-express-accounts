<table class="table table-hover table-condensened">
	<thead>
		<tr>
			<th>Edit</th>
			<th></th>
			<th class="col-sm-4">First Name</th>
			<th class="col-sm-4">Last Name</th>
			<th class="col-sm-4">Email</th>
			<th class="col-sm-4">Username</th>
			<th>Save</th>
		</tr>
	</thead>
	<tbody>
		{{#each model itemController="user-row" as |user|}}
		<tr class="{{if user.model.isDirty 'info'}}"> 
			<td>{{input type="checkbox" checked=user.isEditing}}</td>
			<td><button class="close" {{action "deleteUser"}}>&times;</button></td>
			{{#if user.isEditing}}
				<td>{{input value=user.model.firstName class="form-control input-sm"}}</td>
				<td>{{input value=user.model.lastName class="form-control input-sm"}}</td>
				<td>{{input value=user.model.email class="form-control input-sm"}}</td>
				<td>{{input value=user.model.username class="form-control input-sm"}}</td>

			{{else}}
				<td>{{user.model.firstName}}</td>
				<td>{{user.model.lastName}}</td>
				<td>{{user.model.email}}</td>
				<td>{{user.model.username}}</td>
			{{/if}}
			<td><button class="btn btn-sm btn-info" disabled={{user.saveDisabled}} {{action "saveUser"}}>Save</button></td>

			
		</tr>
		{{/each}}
	</tbody>
</table>
