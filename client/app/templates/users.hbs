
<button type="button" class="btn btn-success" {{action 'addUser'}}>Add New User</button>


<table class="table table-hover table-condensened">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Username</th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |user|}}
		<tr>
			<td>{{user.firstname}}</td>
			<td>{{user.lastname}}</td>
			<td>{{user.email}}</td>
			<td>{{user.username}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>
